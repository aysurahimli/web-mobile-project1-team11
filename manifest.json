{
    "manifest_version": 3,
    "name": "Auto Form Filler",
    "version": "0.1.0",
    "description": "An intelligent auto form filler",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://*.linkedin.com/*",
        "https://*/*"
    ]
}